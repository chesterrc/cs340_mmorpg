{{!-- Form to add a record to the table  --}}
<h2>Adding items</h2>
<p>To add an item, enter their info and click 'Submit'!</p>
<form id="add-item-form-ajax">
    <label for="input-item_name">Item Name: </label>
    <input type="text" name="input-item_name" id="input-item_name" required>
    
     <label for="input-rg">Region: </label>
        <select name="input-rg" id="input-rg">
            {{#each region}}
            <option value='{{this.rg_id}}'>{{this.rg_name}}</option>
            {{/each}}
    <input type="submit">
</form>

{{!-- Embed javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_item.js"></script>

<h2>Updating Items Form</h2>
<p>To update an item's region select the region</p>
<form id="update-item-form-ajax">

    <label for="input-item_name">Item name: </label>
    <select name="input-item_name" id="mySelect-item_name">
        <option value="test">Select an Item</option>
        {{#each data}}
        <option value="{{this.item_id}}">{{this.item_name}}</option>
        {{/each}}
    </select>

    <label for="input-region">Region: </label>
    <select name="input-region" id="input-region-update">
        <option>Select a Region</option>
        {{#each region}}
        <option value="{{this.rg_id}}">{{this.rg_name}}</option>
        {{/each}}
    </select>
    <input type="submit">

</form>

<script src="./js/update_item.js"></script>


