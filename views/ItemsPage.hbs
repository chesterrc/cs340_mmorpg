<a href="/">Home</a>

{{!-- Search bar --}}
<h2> Item Search </h2>
<form id="search-item-html" method="GET" action="/items-page">
    <label for = "input-item_name">Search by Item Name:</label>
    <input type="text" name="item_name" id="input-search-item_name"/>

    <input type="submit"/>
    <a href="/items-page"><button>Reset</button></a>
</form>

{{!-- Create a table for items --}}
<table id="items-tables">
    {{!-- Header section --}}
    <thead>
        <tr>
            <th>Id</th>
            <th>Item</th>
            <th>Region</th>
        </tr>
    </thead>
    {{!-- Body section --}}
    <tbody>
        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.item_id}}>
            <td>{{this.item_id}}</td>
            <td>{{this.item_name}}</td>
            <td>{{this.regions_rg_id}}</td>
            <td><button onclick="deleteItem('{{this.item_id}}')">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_item.js"></script>
